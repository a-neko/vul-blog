<head>
    <link href="stylesheets/style.css" rel="stylesheet" type="text/css" media="all">
</head>
<div style="background-color: #f5f5f5;width: 100%;height: 100%;">
    <%- include('../layout/header'); %>
    <h1 class="title" style="text-align: center;font-size: 3rem;">blogs</h1>
    <div style="display: flex;justify-content: space-around;width: 90vw;height: 70vh;margin:auto" class="container">
        <% blogs.forEach((blog)=>{ %>

            <div class="card" style="background-color:white;width: 13vw;height: 20vh;text-align: center;border-radius: 20px;">
                <a href="/blogs/<%= blog.id%>" style="text-decoration:none;color: black">
                <div class="eyecatch" style="align-content: center;padding-top: 10px">
                    <img width="193" height="130" src="/images/<%= blog.eyecatch %>"/>
                </div>
                <div class="title" style="font-size: 30px;padding-top: 2px"><%= blog.title %></div>
                <div class="name" style="font-size: 18px"><%= blog.name %></div>
                </a>
            </div>

        <% }) %>
    </div>

    <a href="/blogs/post" class="btn_09">投稿する</a>
</div>


