<head>
    <link href="stylesheets/style.css" rel="stylesheet" type="text/css" media="all">
</head>
<div style="background-color: #f5f5f5;width: 100%;height: 100%;">
    <%- include('../layout/header'); %>
    <div class="container" style="background-color: white;margin:0 580px;height: 100%">
        <h1 class="title" style="font-size: 3rem;padding-left: 20px"><%= blog.title %></h1>
        <div style="display: flex;justify-content: space-between">
            <p style="padding-left: 20px;font-size: 1rem"><%= blog.name %></p>
            <p style="padding-right: 20px;"><%= blog.createdAt%></p>
        </div>

        <div style="text-align:center">
            <img src="/images/<%= blog.eyecatch %>" style="margin: auto" width="95%"/>
        </div>
        <div style="font-size: 2rem;padding-left: 20px;margin-top: 30px">
            <%- blog.content %>
        </div>

    </div>

</div>
